{
    "ts-node": {
        "files": true
    },
    "files": ["src/index.ts"],
    "include": ["**/*.ts", "tsup.config.ts"],
    "exclude": [".git", "node_modules"],
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true
    }
}
